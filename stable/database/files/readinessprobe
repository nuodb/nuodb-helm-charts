die() {
  retval="$1"
  shift
  echo "$@"
  exit "$retval"
}

parse_fields() {
    unset start_id
    unset state
    for i in "$@"; do
        case $i in
            sid:*)
                start_id="${i#*:}"
                shift
                ;;
            state:*)
                state="${i#*:}"
                shift
                ;;
            *)
                shift
                ;;
        esac
    done
}

n=0
pgrep -xa nuodb | while read pid argv; do
    n="$((n + 1))"
    parse_fields $argv
    if [ "$start_id" != "" ]; then
        [ "$state" = Running ] || die -1 "Process with start ID $start_id not in Running state: $state""
        exit 0
    fi

    start_id="$(nuocmd show domain --process-format "==={pid} {start_id}" | sed -n "s/ *===$pid //p")"
    nuocmd check process --check-running --start-id "$start_id" || die -1 "Process reported not ready"
done

[ "$n" != 0 ] || die -1 "No process found"
