{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "required": [
        "database"
    ],
    "properties": {
        "database": {
            "type": "object",
            "required": [
                "archiveType"
            ],
            "properties": {
                "archiveType": {
                    "type": "string",
                    "enum": [
                        "",
                        "lsa"
                    ]
                },
                "backupHooks": {
                    "type": "object",
                    "properties": {
                        "quiesceMode": {
                            "type": "string",
                            "enum": [
                                "",
                                "hotsnap",
                                "fsfreeze",
                                "suspend"
                            ]
                        }
                    }
                }
            }
        }
    }
}